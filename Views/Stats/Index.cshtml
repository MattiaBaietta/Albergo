@{
    ViewBag.Title = "Index";
}

<div class="container mt-4">
    @using (Html.BeginForm("SelStat", "Stats", FormMethod.Post))
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3 class="mb-4">Seleziona il numero di prenotazione per il checkout:</h3>
                <div class="input-group">
                    <select name="IdPrenotazione" class="custom-select">
                        @foreach (var v in ViewBag.prenotazioni)
                        {
                            <option value="@v">@v</option>
                        }
                    </select>
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Ricerca</button>
                    </div>
                </div>
            </div>
        </div>
    }

    @using (Html.BeginForm("ShowStat", "Stats", FormMethod.Get))
    {
        if (ViewBag.IdPrenotazione != null)
        {
            <div class="row justify-content-center mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Informazioni sulla Prenotazione</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Numero Prenotazione: @ViewBag.IdPrenotazione</li>
                                <li class="list-group-item">Data di Arrivo: @ViewBag.Inizio</li>
                                <li class="list-group-item">Data di Partenza: @ViewBag.Fine</li>
                                <li class="list-group-item">Tipo Tariffa: @ViewBag.Tipo</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            if (ViewBag.servizi != null)
            {
                <div class="row justify-content-center mt-4">
                    <div class="col-md-6">
                        <label class="mb-2">Servizi Utilizzati:</label>
                        <ul class="list-group">
                            @foreach (var v in ViewBag.servizi)
                            {
                                <li class="list-group-item">@v</li>
                            }
                        </ul>
                    </div>
                </div>
            }
            <div class="mt-3 text-center">
                <h2>Spesa Totale: @ViewBag.TotPagamento €</h2>
            </div>
        }


    }
</div>
